<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.kurukshetra.stark.Activities.SplashActivity"
    android:background="@drawable/gradient_alive">
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/cyclotron"
        android:layout_centerInParent="true"
        android:id="@+id/cyclotron"
       />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_view"
        android:layout_width="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:lottie_imageAssetsFolder="image"
        app:lottie_fileName="loading.json"
        app:lottie_colorFilter="#fff"
        app:lottie_loop="true"
        app:lottie_scale="0.5"
        app:lottie_autoPlay="true" />

</RelativeLayout>
